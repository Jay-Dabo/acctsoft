<% @title = 'Modifier un Compte' %>
<%= start_form_tag({:action => :update, :id => @account.id}, {:id => 'accnt'}) %>
  <%= render :partial => 'form' %>
<%= end_form_tag %>

<table class="list">
  <caption>Journal</caption>
  <col width="*1"/><col span="3" width="*1"/>
  <thead>
    <tr>
      <th>Date</th>
      <th>Débit</th>
      <th>Crédit</th>
      <th>Solde</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th scope="row">Volume</th>
      <td class="money total"><%= @account.total_dt_volume %></td>
      <td class="money total"><%= @account.total_ct_volume %></td>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <th scope="row">Solde</th>
      <td class="money total"><%= @account.total_dt_volume - @account.total_ct_volume if @account.total_dt_volume > @account.total_ct_volume %></td>
      <td class="money total"><%= @account.total_ct_volume - @account.total_dt_volume if @account.total_ct_volume > @account.total_dt_volume %></td>
      <td>&nbsp;</td>
    </tr>
  </tfoot>
  <tbody>
<%= render :partial => 'line', :collection => @account.txn_parts %>
  </tbody>
</table>
