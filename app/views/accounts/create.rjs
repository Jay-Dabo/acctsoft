if @success then
  page.visual_effect :fade, 'new-row'
  page.replace_html 'list-body', :partial => 'account', :collection => @accounts
  page.visual_effect :appear, 'new-link'
  page.remove 'new-row'
  page.visual_effect :highlight, "account_#{@account.id}"
else
  page.replace_html 'messages', show_flash_messages(:textilize => true)
  page.insert_html :bottom, 'messages', error_messages_for(:account)
  page.visual_effect :shake, 'messages'
end
