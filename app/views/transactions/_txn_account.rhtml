<% @txn_account = txn_account
  index = @txn_account.new_record? ? txn_account_counter : @txn_account.id -%>
<tr id="txn_account_<%= index %>">
  <td>
    <%= hidden_field(:txn_account, :no, :size => 10, :index => index) %>
    <%= link_to(@txn_account.no, account_edit_url(:account => @txn_account.no)) %>
    <%= link_to_function 'X', %Q($('txn_account_#{index}').parentNode.removeChild($('txn_account_#{index}'))),
            :title => 'DÃ©truire cette ligne' %>
  </td>
  <td><%= link_to(@txn_account.name, account_edit_url(:account => @txn_account.no)) %></td>
  <td class="money">
    <%= text_field :txn_account, :debit, :size => 8, :class => 'money debit', :index => index, :value => @txn_account.debit.format(:zero => '') %>
  </td>
  <td class="money">
    <%= text_field :txn_account, :credit, :size => 8, :class => 'money credit', :index => index, :value => @txn_account.credit.format(:zero => '') %>
  </td>
</tr>
