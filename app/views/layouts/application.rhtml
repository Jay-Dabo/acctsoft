<html>
<head>
  <%= engine_stylesheet 'datebox_engine', 'calendar-blue', :media => 'all' %>
  <%= stylesheet_link_tag 'application', :media => 'all' %>
  <%= javascript_include_tag :defaults %>
  <%= engine_javascript 'datebox_engine', 'calendar', 'lang/calendar-en', 'calendar-setup' %>
</head>
<body>
  <div id="header">
    <div id="company">
      <%= h(@company.name) %>
    </div>
    <ul id="topnav" class="navigation">
      <li><%= link_to 'Sommaire', summary_url %></li>
      <li><%= link_to 'Transactions', transactions_url %></li>
      <li><%= link_to 'Comptes', accounts_url %></li>
      <li><%= link_to 'Infos Compagnie', config_url %></li>
    </ul>
  </div>
  <div id="content">
    <%= show_flash_messages :textilize => true %>
    <%= javascript_tag visual_effect(:shake, 'messages') %>
    <%= @content_for_layout %>
  </div>
  <div id="footer">
    <ul id="bottomnav" class="navigation">
      <li><%= link_to 'Sommaire', summary_url %></li>
      <li><%= link_to 'Transactions', transactions_url %></li>
      <li><%= link_to 'Comptes', accounts_url %></li>
      <li><%= link_to 'Infos Compagnie', config_url %></li>
    </ul>
  </div>
</body>
</html>
